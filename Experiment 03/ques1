// WAP to take check if the triangle is valid or not. If the validity is established,
// do check if the triangle is isosceles, equilateral, right angle, or scalene.
// Take sides of the triangle as input from a user
#include <stdio.h>

int main() {
    float a, b, c;

    printf("Enter three sides of a triangle: ");
    scanf("%f %f %f", &a, &b, &c);

    if (a + b > c && a + c > b && b + c > a) 
  {
        printf("Triangle is valid.\n");

      
        if (a == b && b == c) {
            printf("It is Equilateral.\n");
        }
        else if (a == b || b == c || a == c) {
            printf("It is Isosceles.\n");
        }
        else if (a*a + b*b == c*c || b*b + c*c == a*a || a*a + c*c == b*b) {
            printf("It is Right-angled.\n");
        }
        else {
            printf("It is Scalene.\n");
        }
    }
    else {
        printf("not valid\n");
    }

    return 0;
}
