#include <stdio.h>

union Address {
    char name[50];
    char home_address[100];
    char hostel_address[100];
    char city[50];
    char state[50];
    int zip;
};

int main() {
    union Address a;           // can take multiple inputs , here taking only 1

    printf("Enter your Name: ");
    scanf("%s", a.name);
    printf("Your Name: %s\n", a.name);

    printf("Enter your Home Address: ");
    scanf("%s", a.home_address);
    printf("Your Present Address: %s\n", a.home_address);

    printf("Enter your City: ");
    scanf("%s", a.city);
    printf("City: %s\n", a.city);

    printf("Enter your State: ");
    scanf("%s", a.state);
    printf("State: %s\n", a.state);

    printf("Enter your ZIP Code: ");
    scanf("%d", a.zip);
    printf("ZIP Code: %d\n", a.zip);

    return 0;
}
