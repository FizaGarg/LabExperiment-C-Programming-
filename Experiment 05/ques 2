// WAP to read a list of integers and store it in a single dimensional array.
// Write a C program to count and display positive, negative, odd, and even numbers in
 // an array. 


#include <stdio.h>

int main() {
    
    int n, i;
    int a[50];
    int pos = 0, neg = 0, even = 0, odd = 0;

  
    printf("Enter how many numbers: ");
    scanf("%d", &n);

  
    printf("Enter %d numbers:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    for(i = 0; i < n; i++) {
        if(a[i] > 0)
            pos++;
        else if(a[i] < 0)
            neg++;

        if(a[i] % 2 == 0)
            even++;
        else
            odd++;
    }

    printf("\nPositive numbers: %d\n", pos);
    printf("Negative numbers: %d\n", neg);
    printf("Even numbers: %d\n", even);
    printf("Odd numbers: %d\n", odd);

    return 0;

}


